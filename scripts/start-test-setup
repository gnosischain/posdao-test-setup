#!/bin/bash

# Exit on undefined variables.
set -u
set -e
set -x

CLIENT=$1
if [[ $CLIENT == *"openethereum"* ]]; then
    extension="openethereum.toml"
else
    extension="nethermind.json"
fi
for i in $(seq 0 3); do
    "$CLIENT" --config "./config/node${i}.${extension}" >> "./data/node${i}/log" &
    node ./scripts/getReservedPeer.js "$i"
done
