{
  "name": "pos-test-setup",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "all": "npm run get-all-submodules && npm run cleanup && npm run compile-pos-contracts && npm run make-spec && npm run start-test-setup && npm run test && npm run stop-test-setup",
    "cleanup": "rm -rf ./parity-data && git checkout ./parity-data",
    "get-all-submodules": "git submodule update --init --remote",
    "compile-pos-contracts": "cd ./pos-contracts && npm i && npm run compile",
    "make-spec": ". ./scripts/network-spec && cd ./pos-contracts && npm i && node ./scripts/make_spec.js",
    "start-test-setup": "bash scripts/start-test-setup ../parity-ethereum/target/debug/parity",
    "test": "sleep inf",
    "stop-test-setup": "bash scripts/stop-test-setup",
    "watcher": "node scripts/watcher.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poanetwork/pos-test-setup.git"
  },
  "author": "poa.network",
  "license": "ISC",
  "dependencies": {
    "sha3": "^2.0.0",
    "web3": "1.0.0-beta.37"
  }
}
